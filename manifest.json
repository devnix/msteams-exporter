{
  "manifest_version": 3,
  "name": "MS Teams Chat Exporter",
  "version": "0.1.1",
  "description": "Export Microsoft Teams conversations to IRC-style plain text format",
  "permissions": [
    "activeTab",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "https://teams.cloud.microsoft/*",
    "https://teams.microsoft.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://teams.cloud.microsoft/*",
        "https://teams.microsoft.com/*"
      ],
      "js": ["lib/utils.js", "lib/extractor.js", "lib/formatter.js", "lib/scroller.js", "content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
